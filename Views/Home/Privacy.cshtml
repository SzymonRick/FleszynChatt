@model FleszynChatt.Models.PasswordViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="box">
        <div>
            <div class="logo">
                <img src="~/resources/logo.png" />
            </div>
            <form asp-controller="Access" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="textbox">
                    <input class="textinput" type="password" placeholder="Hasło" asp-for="Password1" />
                </div>
                <div class="textbox">
                    <input class="textinput" type="password" placeholder="Hasło" asp-for="Password2" />
                </div>

                <div id="button">
                    <button type="submit">Ustaw hasło</button>
                </div>

                @if (ViewData["ValidateMessage"] != null)
                {
                    <div class="error">
                        <br />
                        <label>
                            @ViewData["ValidateMessage"]
                        </label>
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>