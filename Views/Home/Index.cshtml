@model FleszynChatt.Models.ChatDataViewModel;
@using FleszynChat.Scripts;
@using System.IO

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link rel="icon" href="~/resources/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat2.css" asp-append-version="true" />
</head>
<body>
    <header>
        <img id="img" src="~/resources/logo.png" />
        <a id="NAPIS">FLESZCHAT</a>
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Wyloguj</a>
    </header>
    <div id="container">
        

        <div class="sidebar">

            <input type="text" id="searchbox" onkeyup="listUsers()" placeholder="Wyszukaj użytkownika..">

            <table id="userList">

            </table>

            <button id="stuartbutton" onclick="document.getElementById('chatCreator').style.display='block'" style="width:auto;">Create Chat</button>

            <div id="chatCreator" class="modal">
                <div>
                    <h1>Search Users</h1>
                    <input type="text" id="searchbox2" onkeyup="listUsers2()" placeholder="Wyszukaj użytkownika..">
                    <table id="chatCreatorList">

                    </table>
                    <input type="text" id="chatNamer" placeholder="Nazwij Chat..." maxlength="20">
                    <button id="createButton" onclick="createChat(@if(Model != null){@Model.UserId})">Stwórz Chat</button>
                </div>
            </div>

            <table id="contactList">

            </table>
        </div>
        <div class="chatbox2">
            <div class="chat">
                <div class="chatMessages">
                </div>
                <div class="sending">
                    <textarea id="messagebox" placeholder="Wpisz wiadomość..."></textarea>
                    <input type="file" id="fileInput">
                    <button id="sendButton" onclick="sendMessage(@if(Model != null){@Model.UserId})">Wyślij</button>
                </div>
            </div>
        </div>
    </div>


    <audio id="alertSound" src="~/resources/alert.mp3"></audio>
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/chat.js" asp-append-version="true"></script>
</body>
</html>