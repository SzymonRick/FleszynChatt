@model FleszynChatt.Models.LoginViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <div class="box">
        <div>
            <form asp-controller="Access" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="textbox">
                    <input type="Login" placeholder="Login" asp-for="Login" />
                </div>
                <div class="textbox">
                    <input type="password" placeholder="Hasło" asp-for="Password" />
                </div>
                <div>
                    <label class="container">                
                        <input type="checkbox" id="keepLoggedIn" asp-for="KeepLoggedIn">
                        <div class="checkbox"><div class="x">X</div></div>
                        Zapamiętaj mnie
                    </label>
                </div>
                <div id="button">
                    <button type="submit">Zaloguj</button>
                </div>

                @if (ViewData["ValidateMessage"] != null)
                {
                    <div class="error">
                        <br />
                        <label>
                            @ViewData["ValidateMessage"]
                        </label>
                    </div>
                }
            </form>
        </div>
    </div>
</body>
</html>
